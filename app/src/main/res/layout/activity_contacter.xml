<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contacter"
    android:background="@color/vert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            android:src="@drawable/arrow2"/>
        <TextView
            android:id="@+id/Contactez_nous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Contactez nous"
            android:layout_below="@id/img"
            android:textAppearance="@style/login"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/Contactez_nous"
            android:text="Sujet de votre message"
            android:textAppearance="@style/email"
            android:gravity="top"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/sujet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/nom"
            android:inputType="text"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:ems="10"/>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sujet"
            android:text="Votre message"
            android:textAppearance="@style/email"
            android:gravity="top"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/message"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="10dp"
            android:background="@drawable/custom_input"
            android:gravity="top"/>


        <Button
            android:id="@+id/envoyer"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/messageInput"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button2"
            android:text="Envoyer"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</LinearLayout>