<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backa"
    android:layout_width="330dp"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:padding="10dp">

    <LinearLayout android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"


        >
        <TextView
            android:id="@+id/donnephoto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Donner la photo"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"


            />
        <ImageView
            android:id="@+id/iconphone1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/folder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iconphone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/photoInput"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:inputType="textPostalAddress"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView"
        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/gris"
        android:textColor="@color/gris"
        android:text="email"
        android:ems="15"
        android:src="@drawable/photo"
        ></ImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modifaphoto"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnModifierPhotoProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier"
            android:textAllCaps="false"
            android:theme="@style/Button.beige"
            android:textSize="15sp"
            />


    </LinearLayout>
</LinearLayout>